<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.lastmultiplayergame">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_arcanoid_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_arcanoid_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LastMultiplayerGame">
        <activity
            android:name=".game.SingleplayerGameActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".game.setup.GameTypeSettingsActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".game.setup.LobbyActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".game.setup.MultiplayerSettingsActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".game.MultiplayerGameActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>